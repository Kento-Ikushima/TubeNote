<h1>自分タスク一覧ページ</h1>
<%= link_to "アカウント編集", edit_user_registration_path %></br>

<%= link_to "新しいタスクの追加", new_my_task_path %></br>


<script type="text/javascript">
function resizeWidthOnly( newsize ) {
	document.getElementById(@mytask).style.width = newsize + "px";
}
</script>
<input type="button" value="小さく表示" onclick="resizeWidthOnly(160);">
    

