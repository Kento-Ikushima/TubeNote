<div class="wrapper">
  <%= render 'shared/nav' %>
  <div class="block">
    <h1>Task Edit</h1>
    <%= render 'shared/nav' %>
    <%= form_with model: @mytask, url: my_task_path do |f| %>
      <div><%= f.label :url %></div>       
      <div><%= f.text_field :url %></div>  
      <div><%= f.label :description %></div>       
      <div><%= f.text_field :description %></div> 
      <div><%= f.label :folder_id %></div>        
      <div><%= f.collection_select :folder_id, Folder.all, :id, :folder_name %></div>  
      <div><%= f.submit %></div>    
    <% end %>
    <%= link_to 'Back', my_tasks_path %>
    <input type="button" value="Copy" onclick="copyToClipboard()">
  </div>
</div>