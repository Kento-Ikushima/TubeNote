<div class="wrapper">
  <%= render 'shared/nav' %>
  <div class="block">
    <h1>Task Edit</h1>
    <%= form_with model: @mytask, url: my_task_path do |f| %>
      <p><%= f.label :url %></p>       
      <p><%= f.text_field :url %></p>  
      <p><%= f.label :description %></p>       
      <p><%= f.text_field :description %></p> 
      <p><%= f.label :folder_id %></p>        
      <p><%= f.collection_select :folder_id, @my_folders, :id, :folder_name %></p>  
      <p><%= f.submit %></p>    
    <% end %>
    <%= link_to 'Back', my_tasks_path %>
    <input type="button" value="Copy" onclick="copyToClipboard()">
  </div>
</div>